{
  // Principais utilizados
  "workbench.colorTheme": "Origamid Next",
  "workbench.iconTheme": "symbols",
  "symbols.hidesExplorerArrows": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 2,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordWrap": "on",

  "editor.tabSize": 2,

  "workbench.editor.labelFormat": "medium",
  "editor.fontFamily": "fira code",
  "editor.renderLineHighlight": "line",
  "editor.fontLigatures": true,
  "explorer.compactFolders": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "security.workspace.trust.untrustedFiles": "open",

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "format.wrapAttributes": "auto",
    "format.wrapLineLength": 0,
    "autoClosingTags": false
  },

  "[css]": {
    "editor.bracketPairColorization.enabled": true,
    "color-highlight.markerType": "background",
    "editor.colorDecorators": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  "liveServer.settings.donotShowInfoMsg": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "editor.codeLensFontFamily": "'MesloLGS NF'",
  "workbench.settings.applyToAllProfiles": ["editor.codeLensFontFamily"]
}
